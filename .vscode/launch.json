  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "env": {},
      "cwd": "${workspaceFolder}",
      "args": ["server"]
    },
    {
      "name": "Launch Localhost",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}",
      "port": 2345,
      "host": "127.0.0.1",
      "cwd": "${workspaceFolder}"
    },

    {
      "name": "Launch Remote",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/mnt/pt/pt_html/producttutor_go",
      "port": 2345,
      "host": "35.168.41.136",
      "cwd": "${workspaceFolder}"
    }
  ]
}